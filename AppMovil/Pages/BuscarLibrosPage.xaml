<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Pages.BuscarLibrosPage"
             Title="Buscar Libros">
    <ContentPage.BindingContext>
        <viewModels:BuscarLibrosViewModel />
    </ContentPage.BindingContext>
    <ScrollView Padding="20">
        <StackLayout Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="DodgerBlue" 
                   Padding="20" 
                   CornerRadius="15" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🔍 Buscar Libros" 
                           FontSize="26" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Encuentra libros en nuestro catalogo" 
                           FontSize="14"
                           TextColor="LightBlue"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Seccion de busqueda -->
            <Frame BackgroundColor="White" 
                   Padding="15" 
                   CornerRadius="12" 
                   HasShadow="True"
                   BorderColor="LightGray">
                <StackLayout Spacing="15">
                    <Label Text="¿Que libro estas buscando?" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="DarkSlateGray"/>

                    <!-- SearchBar mejorado -->
                    <Frame BackgroundColor="WhiteSmoke" 
                           Padding="5" 
                           CornerRadius="10"
                           HasShadow="False"
                           BorderColor="LightBlue">
                        <SearchBar Placeholder="Buscar por titulo, autor, editorial..." 
                                   Text="{Binding SearchText}"
                                   SearchCommand="{Binding BuscarCommand}"
                                   BackgroundColor="Transparent"
                                   PlaceholderColor="Gray"
                                   TextColor="Black"
                                   FontSize="16"/>
                    </Frame>
                    <!-- Boton para mostrar/ocultar filtros -->
                    <Button Text="🔍 Buscar" 
                             Command="{Binding BuscarCommand}"
                             BackgroundColor="LightSteelBlue"
                             TextColor="DarkBlue"
                             CornerRadius="8"
                             FontSize="14"/>
                    <!-- Boton para mostrar/ocultar filtros -->
                    <Button Text="⚙️ Filtros de busqueda" 
                            Command="{Binding ToggleFiltrosCommand}"
                            BackgroundColor="LightSteelBlue"
                            TextColor="DarkBlue"
                            CornerRadius="8"
                            FontSize="14"/>

                    <!-- Panel de filtros -->
                    <Frame IsVisible="{Binding MostrarFiltros}"
                           BackgroundColor="AliceBlue" 
                           Padding="15" 
                           CornerRadius="10"
                           HasShadow="False"
                           BorderColor="LightBlue">
                        <StackLayout Spacing="10">
                            <Label Text="🔎 Buscar en:" 
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="DarkBlue"/>

                            <!-- Checkboxes de filtros -->
                            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto">

                                <StackLayout Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorTitulo}" Color="DodgerBlue"/>
                                    <Label Text="📖 Titulo" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorAutor}" Color="DodgerBlue"/>
                                    <Label Text="✍️ Autor" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorEditorial}" Color="DodgerBlue"/>
                                    <Label Text="🏢 Editorial" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorGenero}" Color="DodgerBlue"/>
                                    <Label Text="🎭 Genero" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>
                            </Grid>

                            <Button Text="🗑️ Limpiar busqueda" 
                                    Command="{Binding LimpiarCommand}"
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    CornerRadius="8"
                                    FontSize="14"/>
                        </StackLayout>
                    </Frame>

                    <!-- Indicador de carga -->
                    <StackLayout IsVisible="{Binding IsBusy}" 
                                Orientation="Horizontal" 
                                HorizontalOptions="Center"
                                Spacing="10">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                          Color="DodgerBlue"/>
                        <Label Text="Buscando libros..." 
                               TextColor="DodgerBlue"
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Seccion de resultados -->
            <StackLayout Spacing="15">
                <!-- Encabezado de resultados -->
                <Frame BackgroundColor="LightGreen" 
                       Padding="12" 
                       CornerRadius="10" 
                       HasShadow="True"
                       BorderColor="Green">
                    <StackLayout>
                        <Label Text="📚 Resultados de busqueda" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="DarkGreen"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding Libros.Count, StringFormat='{0} libros encontrados'}"
                               FontSize="14"
                               TextColor="DarkGreen"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Lista de libros en cards mejoradas -->
                <CollectionView ItemsSource="{Binding Libros}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   Padding="20" 
                                   Margin="0,8"
                                   CornerRadius="15"
                                   HasShadow="True"
                                   BorderColor="LightSteelBlue">
                                <Grid ColumnDefinitions="Auto, *, Auto" 
                                      RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">

                                    <!-- Icono principal -->
                                    <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="5"
                                           Text="📚" 
                                           FontSize="40"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Margin="0,0,15,0"/>

                                    <!-- Titulo del libro -->
                                    <Label Grid.Column="1" Grid.Row="0"
                                           Text="{Binding Titulo}" 
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="DarkSlateGray"
                                           LineBreakMode="WordWrap"/>

                                    <!-- Editorial -->
                                    <StackLayout Grid.Column="1" Grid.Row="1" 
                                                Orientation="Horizontal" 
                                                Spacing="5"
                                                Margin="0,5,0,0">
                                        <Label Text="🏢" FontSize="14"/>
                                        <Label Text="{Binding Editorial.Nombre, StringFormat='Editorial: {0}'}" 
                                               FontSize="14"
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation"/>
                                    </StackLayout>

                                    <!-- Año de publicacion -->
                                    <StackLayout Grid.Column="1" Grid.Row="2" 
                                                Orientation="Horizontal" 
                                                Spacing="5"
                                                Margin="0,2,0,0">
                                        <Label Text="📅" FontSize="14"/>
                                        <Label Text="{Binding AnioPublicacion, StringFormat='Año: {0}'}" 
                                               FontSize="14"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Paginas -->
                                    <StackLayout Grid.Column="1" Grid.Row="3" 
                                                Orientation="Horizontal" 
                                                Spacing="5"
                                                Margin="0,2,0,0">
                                        <Label Text="📄" FontSize="14"/>
                                        <Label Text="{Binding Paginas, StringFormat='Paginas: {0}'}" 
                                               FontSize="14"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Descripcion -->
                                    <Label Grid.Column="1" Grid.Row="4"
                                           Text="{Binding Descripcion}" 
                                           FontSize="13"
                                           TextColor="DarkGray"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2"
                                           Margin="0,8,0,0"/>
                                    
                                    <!-- Autores -->
                                    <Label Grid.Column="1" Grid.Row="5"
                                            Text="{Binding Autores}" 
                                            FontSize="13"
                                            TextColor="DarkGray"
                                            LineBreakMode="WordWrap"
                                            MaxLines="2"
                                            Margin="0,8,0,0"/>
                                    
                                    <!-- Generos -->
                                    <Label Grid.Column="1" Grid.Row="6"
                                            Text="{Binding Generos}" 
                                            FontSize="13"
                                            TextColor="DarkGray"
                                            LineBreakMode="WordWrap"
                                            MaxLines="2"
                                            Margin="0,8,0,0"/>
                                    
                                    <!-- Boton de accion -->
                                    <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="5"
                                            Text="📖 Ver"
                                            BackgroundColor="LightBlue"
                                            TextColor="DarkBlue"
                                            CornerRadius="10"
                                            FontSize="12"
                                            WidthRequest="60"
                                            HeightRequest="60"
                                            VerticalOptions="Center"/>

                                   
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>