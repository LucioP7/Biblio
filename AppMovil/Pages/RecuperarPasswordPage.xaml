<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AppMovil.Pages.RecuperarPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             Title="Recuperar Password"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:RecuperarPasswordViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid RowDefinitions="Auto, *, Auto">

            <Frame Grid.Row="0" 
               BackgroundColor="#4ECDC4"
               Padding="20,50,20,20"
               CornerRadius="0"
               HasShadow="False">
                <StackLayout>
                    <!-- Botón volver -->
                    <Button Text="←"
                        Command="{Binding VolverCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="24"
                        HorizontalOptions="Start"
                        WidthRequest="50"
                        HeightRequest="50"
                        Margin="0,0,0,20"/>
                    
                    <!-- Título -->
                    <Label Text="Olvide mi password" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,0,0,30"/>

                    <Frame BackgroundColor="White"
                       CornerRadius="80"
                       WidthRequest="160"
                       HeightRequest="160"
                       HorizontalOptions="Center"
                       Padding="0"
                       HasShadow="True">
                        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="🔐" 
                               FontSize="40"                         
                               HorizontalOptions="Center"                        
                               Margin="0,10,0,0"/>
                            <Label Text="📧"
                               FontSize="35"
                               HorizontalOptions="Center"
                               Margin="0,5,0,10"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <StackLayout Grid.Row="1" 
                     Padding="30,40,30,20"
                     Spacing="30"
                     BackgroundColor="White">
                
                <!-- Texto instructivo unificado -->
                <Label Text="Ingrese su correo electronico y le enviaremos las instrucciones para restablecer su password"              
                   FontSize="18"                    
                   FontAttributes="Bold"
                   TextColor="#3498DB"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   Margin="0,0,0,20"/>

                <!-- Campo de email -->
                <StackLayout Spacing="20">
                    <Entry Text="{Binding Mail}"
                       Placeholder="Correo electronico"
                       PlaceholderColor="#BDC3C7"
                       TextColor="#2C3E50"
                       FontSize="16"
                       Keyboard="Email"
                       BackgroundColor="Transparent"
                       Margin="0,40,0,0"/>

                    <!-- Línea debajo del Entry -->
                    <BoxView HeightRequest="1"
                         BackgroundColor="#BDC3C7"
                         HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <StackLayout Spacing="15">
                    <Label Text="{Binding ErrorMessage}" 
                    TextColor="#E74C3C"
                    FontSize="14"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    IsVisible="{Binding ErrorMessage}"
                    LineBreakMode="WordWrap"/>

                    <Label Text="{Binding SuccessMessage}" 
                       TextColor="#27AE60"
                       FontSize="14"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       IsVisible="{Binding SuccessMessage}"
                       FontAttributes="Bold"
                       LineBreakMode="WordWrap"/>

                    <StackLayout IsVisible="{Binding IsBusy}" 
                            Orientation="Horizontal" 
                            HorizontalOptions="Center"
                            Spacing="10">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                      Color="#4ECDC4"/>
                        <Label Text="Enviando instrucciones..." 
                           TextColor="#4ECDC4"
                           VerticalOptions="Center"
                           FontSize="14"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>

                <Button Grid.Row="2"
                Text="Enviar"
                Command="{Binding EnviarCommand}"
                BackgroundColor="#4ECDC4"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="0"
                Margin="40,20,40,40"/>

        </Grid>
    </ScrollView>
</ContentPage>